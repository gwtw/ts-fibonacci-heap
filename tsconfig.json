    "rootDir": "src",
    "outDir": "lib",
    "sourceMap": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
